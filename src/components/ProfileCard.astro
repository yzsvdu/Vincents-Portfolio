---
const { name, github, linkedin, profilePicture, bio } = Astro.props;
---

<style>
    .profile-card {
        max-width: 900px;
        width: 100%;
        display: flex;
        align-items: flex-start;
        padding: 20px;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px auto;
        gap: 20px; /* Space between picture and content */
    }

    .profile-card img {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .profile-info h2 {
        margin: 0;
        font-size: 1.8em;
        color: #333;
    }

    .profile-info p {
        font-size: 1.1em;
        color: #666;
        margin: 10px 0;
    }

    .links {
        margin-top: 20px;
        display: flex;
        align-items: center;
    }

    .links a {
        margin: 0 10px;
        color: #007bff;
        text-decoration: none;
        font-size: 1.2em;
        display: flex;
        align-items: center;
    }

    .links a:hover {
        text-decoration: underline;
    }

    .links svg {
        width: 24px;
        height: 24px;
        margin-right: 8px;
        fill: #007bff;
    }
</style>

<div class="profile-card">
    <img src={profilePicture} alt={`${name}'s profile picture`} />
    <div class="profile-info">
        <h2>{name}</h2>
        <p>{bio}</p>
        <div class="links">
